<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bf.hzplayer.VideoListActivity"
    android:padding="10dp">

    <RadioGroup
        android:id="@+id/title_tab"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/net_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="网络"
            android:gravity="center"
            android:background="@drawable/title_tab_left"/>

        <RadioButton
            android:id="@+id/loc_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="本地"
            android:gravity="center"
            android:background="@drawable/title_tab_right"/>

    </RadioGroup>

    <FrameLayout
        android:id="@+id/video_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_tab"
        android:layout_marginTop="10dp">

    </FrameLayout>

</RelativeLayout>
